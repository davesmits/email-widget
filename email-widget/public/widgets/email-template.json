{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "$data": "${Items[0]}",
      "$when": "${From != ''}",
      "items": [
        {
          "type": "TextBlock",
          "text": "${From}",
          "wrap": true,
          "spacing": "None",
          "weight": "Bolder"
        },
        {
          "type": "TextBlock",
          "text": "${Subject}",
          "wrap": true,
          "spacing": "None"
        },
        {
          "type": "TextBlock",
          "text": "${BodyPreview}",
          "wrap": true,
          "spacing": "None",
          "weight": "Lighter",
